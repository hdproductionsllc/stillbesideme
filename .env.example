PORT=3001
NODE_ENV=development
SESSION_SECRET=change-me-to-a-random-string

# Required for AI poem generation — falls back to template poem if missing
ANTHROPIC_API_KEY=sk-ant-placeholder

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

BASE_URL=http://localhost:3001

# WHCC Print Lab (sandbox credentials for testing)
WHCC_ORDER_API_URL=https://sandbox.apps.whcc.com
WHCC_CONSUMER_KEY=your-consumer-key
WHCC_CONSUMER_SECRET=your-consumer-secret
WHCC_EDITOR_API_URL=https://prospector-stage.dragdrop.design
WHCC_EDITOR_KEY_ID=your-editor-key-id
WHCC_EDITOR_KEY_SECRET=your-editor-key-secret
WHCC_ENVIRONMENT=sandbox

# Luma Prints (primary fulfillment provider)
LUMA_API_KEY=your-luma-api-key
LUMA_API_SECRET=your-luma-api-secret
LUMA_ENVIRONMENT=sandbox
LUMA_STORE_ID=

# Fulfillment provider: 'luma' or 'whcc'
FULFILLMENT_PROVIDER=luma

# Email (proof approval workflow) — works with any SMTP provider (Resend, SendGrid, Gmail, Mailtrap)
# If SMTP_HOST is not set, emails are logged to console but not sent
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USER=resend
# SMTP_PASS=re_your_api_key
# EMAIL_FROM=Still Beside Me <hello@stillbesideme.com>
# ADMIN_EMAIL=hello@stillbesideme.com

# Persistent storage paths (defaults to project-relative dirs for local dev)
# On Railway: set these to a mounted volume, e.g. /data, /data/uploads, /data/output
# DATA_DIR=/data
# UPLOADS_DIR=/data/uploads
# OUTPUT_DIR=/data/output
