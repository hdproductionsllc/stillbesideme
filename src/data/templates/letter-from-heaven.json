{
  "id": "letter-from-heaven",
  "name": "Letter From Heaven",
  "collection": "in-loving-memory",
  "description": "A personalized letter written from their perspective to their loved ones, framed alongside their photo – museum-quality and one of a kind.",
  "category": "human",
  "poemSupport": "ai",

  "tributeMapping": {
    "name": "name",
    "nickname": "nickname",
    "familyName": "familyName",
    "familyPrefix": "Forever loved by",
    "birthDate": "birthDate",
    "passDate": "passDate",
    "poemText": "poemText"
  },

  "poemLabel": "Letter",

  "formLabels": {
    "poemSectionTitle": "Now let's write their letter from heaven",
    "poemLibraryLink": "Or choose from our letter library instead"
  },

  "canvas": {
    "width": 4800,
    "height": 6000,
    "dpi": 300,
    "background": "#1a1a1a"
  },

  "layouts": {
    "side-by-side": {
      "label": "Side by Side",
      "panels": 2,
      "columns": [1, 1],
      "rows": [1],
      "areas": [["photo", "tribute"]],
      "aspectRatio": "5/3.2"
    },
    "stacked": {
      "label": "Stacked",
      "panels": 2,
      "columns": [1],
      "rows": [1, 1],
      "areas": [["photo"], ["tribute"]],
      "aspectRatio": "4/5"
    },
    "hero-left": {
      "label": "Hero Left",
      "panels": 3,
      "columns": [1.15, 1],
      "rows": [1, 1],
      "areas": [["photo", "panel2"], ["photo", "tribute"]],
      "aspectRatio": "5/3.8"
    },
    "hero-top": {
      "label": "Hero Top",
      "panels": 3,
      "columns": [1, 1],
      "rows": [1.3, 1],
      "areas": [["photo", "photo"], ["panel2", "tribute"]],
      "aspectRatio": "4/5"
    },
    "photos-left": {
      "label": "Photos Left",
      "panels": 3,
      "columns": [1, 1.15],
      "rows": [1, 1],
      "areas": [["photo", "tribute"], ["panel2", "tribute"]],
      "aspectRatio": "5/3.8"
    },
    "tribute-top": {
      "label": "Tribute Top",
      "panels": 3,
      "columns": [1, 1],
      "rows": [1, 1.3],
      "areas": [["tribute", "tribute"], ["photo", "panel2"]],
      "aspectRatio": "4/5"
    }
  },

  "styleVariants": {
    "classic-dark": {
      "label": "Classic Dark",
      "description": "Dark wood frame, near-black mat, cream and gold text – timeless and premium",
      "frame": {
        "gradient": "linear-gradient(145deg, #2c2018, #3a2a1c 15%, #1e1610 40%, #2a1e14 70%, #1a120c)",
        "shadow": "0 4px 24px rgba(0,0,0,0.5)"
      },
      "mat": { "color": "#1a1a1a" },
      "tribute": {
        "background": "#1a1a1a",
        "name": "#FAF8F5",
        "dates": "#9B9590",
        "divider": "#C4A882",
        "poem": "#C4A882",
        "nickname": "#9B9590",
        "family": "#9B9590"
      },
      "photo": {
        "borderColor": "#C4A882"
      }
    },
    "warm-natural": {
      "label": "Warm Natural",
      "description": "Natural oak frame, warm cream mat, dark text – modern and warm",
      "frame": {
        "gradient": "linear-gradient(145deg, #b8956a, #c9a87c 15%, #a0804f 40%, #c4a06d 70%, #96783f)",
        "shadow": "0 4px 24px rgba(0,0,0,0.3)"
      },
      "mat": { "color": "#F5EDE0" },
      "tribute": {
        "background": "#F5EDE0",
        "name": "#2C2420",
        "dates": "#6B5D52",
        "divider": "#C4A882",
        "poem": "#4A3F36",
        "nickname": "#6B5D52",
        "family": "#6B5D52"
      },
      "photo": {
        "borderColor": "#C4A882"
      }
    },
    "soft-light": {
      "label": "Soft Light",
      "description": "White frame, white mat, muted text – gentle and contemporary",
      "frame": {
        "gradient": "linear-gradient(145deg, #e8e4e0, #f0ece8 15%, #d8d4d0 40%, #ece8e4 70%, #d0ccc8)",
        "shadow": "0 4px 24px rgba(0,0,0,0.15)"
      },
      "mat": { "color": "#FFFFFF" },
      "tribute": {
        "background": "#FFFFFF",
        "name": "#3a3a3a",
        "dates": "#8a8a8a",
        "divider": "#c0b8a8",
        "poem": "#5a5a5a",
        "nickname": "#8a8a8a",
        "family": "#8a8a8a"
      },
      "photo": {
        "borderColor": "#c0b8a8"
      }
    }
  },

  "defaultStyle": "classic-dark",
  "defaultLayout": "side-by-side",

  "photoSlots": [
    { "id": "main", "label": "Share their photo", "sublabel": "The one that captures who they really were", "required": true },
    { "id": "panel2", "label": "Second photo", "sublabel": "Another cherished moment", "required": false }
  ],

  "memoryFields": [
    { "id": "name", "label": "What was their name?", "type": "text", "required": true, "maxLength": 40, "displayOn": "tribute" },
    { "id": "relationship", "label": "Who were they to you?", "type": "select", "options": ["Mother", "Father", "Wife", "Husband", "Son", "Daughter", "Sister", "Brother", "Grandmother", "Grandfather", "Friend", "Other"], "required": true, "feedsPoem": true },
    { "id": "nickname", "label": "What did family call them?", "sublabel": "A nickname, a title, or what the grandkids said", "type": "text", "required": false, "maxLength": 80, "placeholder": "Nana, Pop, Coach", "displayOn": "tribute", "feedsPoem": true },
    { "id": "birthDate", "label": "Date of birth", "sublabel": "Year or full date", "type": "text", "required": false, "maxLength": 20, "placeholder": "1945", "displayOn": "tribute" },
    { "id": "passDate", "label": "Date of passing", "sublabel": "Year or full date", "type": "text", "required": false, "maxLength": 20, "placeholder": "2026", "displayOn": "tribute" },
    { "id": "personality", "label": "What made them who they were?", "sublabel": "The qualities that defined them", "type": "textarea", "required": false, "maxLength": 300, "feedsPoem": true },
    { "id": "favoriteMemory", "label": "A memory that captures them perfectly", "sublabel": "The story you'd tell someone who never met them", "type": "textarea", "required": false, "maxLength": 300, "feedsPoem": true },
    { "id": "favoriteSaying", "label": "Something they always said", "sublabel": "A phrase, a piece of advice, a running joke", "type": "text", "required": false, "maxLength": 120, "feedsPoem": true },
    { "id": "legacy", "label": "What did they teach you?", "sublabel": "The lesson that stayed with you", "type": "textarea", "required": false, "maxLength": 300, "feedsPoem": true },
    { "id": "familyName", "label": "Who will miss them most?", "sublabel": "A name or family name for the tribute footer", "type": "text", "required": false, "maxLength": 80, "placeholder": "The Johnson family", "displayOn": "tribute" },
    { "id": "poemText", "label": "Letter from heaven", "type": "poem-selector" }
  ],

  "printProducts": [
    { "sku": "framed-5x7", "label": "Framed 5×7\"", "price": 8495, "badge": "Gift Size" },
    { "sku": "framed-8x10", "label": "Framed 8×10\"", "price": 10995 },
    { "sku": "framed-11x14", "label": "Framed 11×14\"", "price": 15995, "default": true, "badge": "Most Popular" },
    { "sku": "framed-16x20", "label": "Framed 16×20\"", "price": 24995 },
    { "sku": "framed-20x24", "label": "Framed 20×24\"", "price": 34995 },
    { "sku": "framed-20x30", "label": "Framed 20×30\"", "price": 42995, "badge": "Statement Piece" },
    { "sku": "framed-30x40", "label": "Framed 30×40\"", "price": 69995 }
  ]
}
